<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="css/userStyle.css">

    <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>

    <title> Profile </title>
</head>
<body>
    <div class="sidebar">
        <i class="fab fa-twitter"></i>

        <div class="sidebarOption active">
            <span class="material-icons"> home </span>
            <h2> Home </h2>
        </div>
        <div class="sidebarOption">
            <span class="material-icons"> search </span>
            <h2> Explore </h2>
        </div>
        <div class="sidebarOption">
            <span class="material-icons"> notifications_none </span>
            <h2> Notifications </h2>
        </div>
        
        <button class="sidebar_tweet"> Tweet </button>
    </div>

    <div class="feed">
        <div class="feed_header">
            <h2> Home </h2>
        </div>

        <div class="tweetBox">
            <form id="makeTweet">
                <div class="tweetbox_input">
                    <img src="https://images.rawpixel.com/image_800/czNmcy1wcml2YXRlL3Jhd3BpeGVsX2ltYWdlcy93ZWJzaXRlX2NvbnRlbnQvbHIvdjkzNy1hZXctMTExXzMuanBn.jpg" alt="">
                    <input id="tweet" type="text" placeholder="What's Happening?">
                </div>
                <button  type="submit" class="tweetbox_tweetbutton" >Tweet</button>
            </form>
        </div>

        <div id="posts">

            <% if(tweets.length > 0) { %>
                <% for (var i = 0; i < tweets.length; ++i) { %>
                    <div class="post">
                        <div class="post_avatar">
                            <img src="https://images.rawpixel.com/image_800/czNmcy1wcml2YXRlL3Jhd3BpeGVsX2ltYWdlcy93ZWJzaXRlX2NvbnRlbnQvbHIvdjkzNy1hZXctMTExXzMuanBn.jpg" alt="">
                        </div>
            
                        <div class="post_body">
                            <div class="post_header">
                                <div class="post_headerTest">
                                    <h3>
                                        <%= tweets[i].firstname %> <%= tweets[i].lastname %>
                                        <span class="post_headerSpecial">
                                            @<%= tweets[i].username %>
                                        </span>
                                    </h3>
                                </div>
                                <div class="post_headerDescription">
                                    <p> <%= tweets[i].tweet %> </p>
                                </div>
                            </div>
            
                            <div class="post_footer">
                                <span class="material-icons"> repeat </span>
                                <span class="material-icons"> favorite_border </span>
                                <span class="material-icons"> share </span>
                            </div>
                        </div>
                    </div>
                <% } %>
            <% } %>

        </div>
    </div>

    <script src="js/tweetRequest.js"></script>
</body>
</html>
