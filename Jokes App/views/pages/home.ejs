<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title> Jokes </title>

    <style>
        body {
            background-color: cadetblue;
        }

        .box {
            position: relative;
            width: 65%;
            height: fit-content;
            margin: 0 auto;
            margin-top: 10%;
            padding: 25px;
            text-align: justify;
            border-radius: 10px;
            background-color: black;
        }

        .nav {
            display: flex;
            flex-wrap: wrap;
            flex-direction: row;
            justify-content: center;
            gap: 10%;
        }

        form {
            margin: 0%;
        }

        input {
            height: 5vh;
        }

        .jokeDiv {
            width: 90%;
            height: fit-content;
            padding: 10px;
            margin: 0 auto;
            margin-top: 4%;
            color: aquamarine;
            border-radius: 7px;
            background-color: darkslategray;
        }

        button {
            height: 6vh;
            width: 14vh;
            background-color: aqua;
            border-radius: 5px;
            color: darkblue;
        }

        button:hover {
            cursor: pointer;
        }

        .id {
            margin-top: 4%;
            font-size: 17px;
        }

        .joke {
            margin-top: 2%;
            font-size: 20px;
        }
    </style>
</head>

<body>
    <div class="box">
        <div class="nav">
            <button onclick="location.reload();"> Find Joke </button>

            <form action="/joke", method="post">
                <input name="id" type="text" placeholder="ID">
                <button type="submit"> Search </button>
            </form>
        </div>

        <div class="jokeDiv">
            <div class="id"> ID : <%= id %> </div>
            <div class="joke"> <%= joke %> </div>
        </div>
    </div>
</body>
</html>
